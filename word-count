def welcome():
    print("Hey!")
    global inputt
    inputt = input("What's on your mind? ")
    return inputt

def process(inputt):
    words = inputt.split()
    global outputt
    outputt = len(words)
    return outputt

def out(outputt):
    print("There are {0} words in your sentence".format(outputt))

welcome()
process(inputt)
out(outputt)
